---
import PostcodeChecker from '../components/PostcodeChecker.astro';
import LondonMap from '../components/LondonMap.astro';

const baseUrl = import.meta.env.BASE_URL;

// TypeScript declarations for Google Analytics
declare global {
  interface Window {
    dataLayer: any[];
  }
  function gtag(...args: any[]): void;
}
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Check if your London postcode is in the famous 'banana' zone - the curved area of central London's most desirable neighborhoods." />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>London Banana Zone Checker | Are you in the banana?</title>
    <link rel="icon" type="image/svg+xml" href={`${baseUrl}/favicon.svg`} />
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-1SL8Q8VHY6"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(...args: any[]){window.dataLayer.push(args);}
      gtag('js', new Date());
      gtag('config', 'G-1SL8Q8VHY6');
    </script>
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://argjendhaxhiu.github.io/londonbanana/" />
    <meta property="og:title" content="London Banana Zone Checker" />
    <meta property="og:description" content="Check if your London postcode is in the famous 'banana' zone!" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://argjendhaxhiu.github.io/londonbanana/" />
    <meta property="twitter:title" content="London Banana Zone Checker" />
    <meta property="twitter:description" content="Check if your London postcode is in the famous 'banana' zone!" />
  </head>
  <body>
    <main>
      <div class="container">
        <LondonMap />
        <PostcodeChecker />
      </div>
    </main>
  </body>
</html>

<style>
  html {
    font-family: system-ui, sans-serif;
    background: linear-gradient(135deg, #fef5e7 0%, #fed7aa 100%);
    min-height: 100vh;
  }
  
  body {
    margin: 0;
    padding: 2rem 1rem;
    min-height: 100vh;
  }
  
  main {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
  }

  .container {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    background: white;
    border-radius: 16px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    padding: 2rem;
  }

  @media (min-width: 768px) {
    .container {
      grid-template-columns: 1fr 1fr;
      align-items: start;
    }
  }

  @media (max-width: 480px) {
    body {
      padding: 0.5rem 0.25rem;
      min-height: 100vh;
    }
    
    .container {
      border-radius: 16px;
      padding: 1rem;
      gap: 1.5rem;
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    }
  }

  /* Optimized for very small screens */
  @media (max-width: 360px) {
    body {
      padding: 0.25rem;
    }
    
    .container {
      border-radius: 12px;
      padding: 0.75rem;
      gap: 1rem;
    }
  }

  /* Touch device optimizations */
  @media (hover: none) and (pointer: coarse) {
    .container {
      /* Ensure touch-friendly spacing */
      gap: 2rem;
    }
  }

  /* Landscape mobile optimization */
  @media (max-width: 768px) and (orientation: landscape) {
    body {
      padding: 0.5rem;
    }
    
    .container {
      grid-template-columns: 1fr 1fr;
      gap: 1.5rem;
      align-items: start;
      max-height: 90vh;
      overflow-y: auto;
    }
  }
</style>
